{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "GatoLang",
  "scopeName": "source.gatolang",
  "fileTypes": ["gw"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },

    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#builtins" },

    { "include": "#annotations" },
    { "include": "#imports" },

    { "include": "#functionDeclarations" },
    { "include": "#classDeclarations" },

    { "include": "#memberAccess" },
    { "include": "#functionCalls" },
    { "include": "#identifiers" },

    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.gatolang",
          "match": "//.*$"
        },
        {
          "name": "comment.block.gatolang",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },

    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.gatolang",
          "begin": "\"",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.gatolang" }
          },
          "end": "\"",
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.gatolang" }
          },
          "patterns": [
            { "include": "#stringEscapes" }
          ]
        }
      ]
    },

    "stringEscapes": {
      "patterns": [
        {
          "name": "constant.character.escape.gatolang",
          "match": "\\\\(?:[\"\\\\nrt0]|x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4})"
        },
        {
          "name": "invalid.illegal.escape.gatolang",
          "match": "\\\\."
        }
      ]
    },

    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.gatolang",
          "match": "\\b\\d+\\.\\d+(?:[eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.integer.gatolang",
          "match": "\\b\\d+(?:[eE][+-]?\\d+)?\\b"
        }
      ]
    },

    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.gatolang",
          "match": "\\b(import|class|new|return|if|else|while|loop|break|final)\\b"
        },
        {
          "name": "keyword.operator.word.gatolang",
          "match": "\\b(and|or|not)\\b"
        },
        {
          "name": "constant.language.boolean.gatolang",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.gatolang",
          "match": "\\bnull\\b"
        }
      ]
    },

    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.gatolang",
          "match": "\\b(void|int|float|bool|string)\\b"
        },
        {
          "name": "storage.type.array.gatolang",
          "match": "\\b(void|int|float|bool|string)\\s*\\[\\s*\\]"
        },
        {
          "name": "entity.name.type.gatolang",
          "match": "\\b[A-Z][A-Za-z0-9_]*\\b"
        }
      ]
    },

    "builtins": {
      "patterns": [
        {
          "name": "support.function.builtin.gatolang",
          "match": "\\b(print|input|random|sleep|int|float|string)\\b(?=\\s*\\()"
        }
      ]
    },

    "imports": {
      "patterns": [
        {
          "name": "meta.import.gatolang",
          "begin": "^\\s*(import)\\b",
          "beginCaptures": {
            "1": { "name": "keyword.control.import.gatolang" }
          },
          "end": "(?=;|$)",
          "patterns": [
            {
              "name": "entity.name.namespace.gatolang",
              "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
            },
            {
              "name": "punctuation.separator.namespace.gatolang",
              "match": "\\."
            }
          ]
        }
      ]
    },

    "annotations": {
      "patterns": [
        {
          "name": "meta.annotation.gatolang",
          "match": "@\\b[A-Za-z_][A-Za-z0-9_]*\\b"
        }
      ]
    },

    "classDeclarations": {
      "patterns": [
        {
          "name": "meta.class.declaration.gatolang",
          "begin": "\\b(class)\\b\\s+([A-Z][A-Za-z0-9_]*)",
          "beginCaptures": {
            "1": { "name": "storage.type.class.gatolang" },
            "2": { "name": "entity.name.type.class.gatolang" }
          },
          "end": "(?=\\{)",
          "patterns": []
        }
      ]
    },

    "functionDeclarations": {
      "patterns": [
        {
          "name": "meta.function.declaration.gatolang",
          "match": "\\b(void|int|float|bool|string|[A-Z][A-Za-z0-9_]*)\\b\\s+([a-z_][A-Za-z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "storage.type.return.gatolang" },
            "2": { "name": "entity.name.function.gatolang" }
          }
        }
      ]
    },

    "memberAccess": {
      "patterns": [
        {
          "name": "punctuation.accessor.dot.gatolang",
          "match": "\\."
        },
        {
          "name": "meta.member.gatolang",
          "match": "(?<=\\.)\\b([A-Za-z_][A-Za-z0-9_]*)\\b",
          "captures": {
            "1": { "name": "variable.other.member.gatolang" }
          }
        },
        {
          "name": "meta.member.function.gatolang",
          "match": "(?<=\\.)\\b([A-Za-z_][A-Za-z0-9_]*)\\b(?=\\s*\\()",
          "captures": {
            "1": { "name": "entity.name.function.member.gatolang" }
          }
        }
      ]
    },

    "functionCalls": {
      "patterns": [
        {
          "name": "entity.name.function.call.gatolang",
          "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b(?=\\s*\\()"
        }
      ]
    },

    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.constant.gatolang",
          "match": "\\b[A-Z_][A-Z0-9_]*\\b"
        },
        {
          "name": "variable.other.gatolang",
          "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
        }
      ]
    },

    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.gatolang",
          "match": "(\\+=|-=|\\*=|/=|%=|=)"
        },
        {
          "name": "keyword.operator.comparison.gatolang",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.gatolang",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.gatolang",
          "match": "(\\+|-|\\*|/|%)"
        }
      ]
    },

    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.section.group.begin.gatolang",
          "match": "\\("
        },
        {
          "name": "punctuation.section.group.end.gatolang",
          "match": "\\)"
        },
        {
          "name": "punctuation.section.block.begin.gatolang",
          "match": "\\{"
        },
        {
          "name": "punctuation.section.block.end.gatolang",
          "match": "\\}"
        },
        {
          "name": "punctuation.section.brackets.begin.gatolang",
          "match": "\\["
        },
        {
          "name": "punctuation.section.brackets.end.gatolang",
          "match": "\\]"
        },
        {
          "name": "punctuation.terminator.statement.gatolang",
          "match": ";"
        },
        {
          "name": "punctuation.separator.comma.gatolang",
          "match": ","
        },
        {
          "name": "punctuation.separator.colon.gatolang",
          "match": ":"
        }
      ]
    }
  }
}
